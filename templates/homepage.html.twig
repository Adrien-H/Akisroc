{% extends 'base.html.twig' %}

{% block beta_header %}
  <div style="margin: 3px 0; padding: 3px; border-radius: 4px;
              background-color: #9d8e76; box-shadow: 1px 1px 3px black;
              color: white; font-weight: bold;"
  >
    Bienvenue sur la bêta d'<a class="smooth-underline-danger" href="{{ path('homepage') }}">Akisroc JdR</a>
    <br/>
    Version :
    <a href="https://github.com/Adrien-H/Akisroc/releases" class="smooth-underline-danger" target="_blank">
      {{ app_version() }}
    </a>
    <br/>
    News :
    <a href="{{ path('changelog') }}" class="smooth-underline-danger">Voir les notes de mises à jour</a>
    <hr/>
    <span class="fa fa-exclamation-triangle fa-2x color-danger"></span> Des resets réguliers de la base de données sont à prévoir. (:
  </div>
{% endblock %}

{% block body %}
  {{ block('beta_header') }}  {#@Todo Remove it#}

  <section>
    <header>
      <h2>{% trans %}homepage.stories{% endtrans %}</h2>
    </header>
    <nav>
      <div>
        <a href="#">
          <h3>{% trans %}homepage.active_story{% endtrans %}</h3>
        </a>
        <a href="#">
          <h3>{% trans %}hompeage.random_story{% endtrans %}</h3>
        </a>
        <a href="#">
          <h3>{% trans %}homepage.trending_story{% endtrans %}</h3>
        </a>
      </div>
      <div>
        <a href="#">
          <h3>{% trans %}homepage.all_stories{% endtrans %}</h3>
        </a>
      </div>
    </nav>
  </section>

  <nav class="categories">
    <header>
      <h2>HRP</h2>
    </header>
    <div>
      {% for board in boards %}
        <a class="board" href="#{{ board.slug }}">
          <h3>{{ board.title }}</h3>
          <p>{{ board.description }}</p>
        </a>
      {% endfor %}
    </div>
  </nav>
{% endblock %}
